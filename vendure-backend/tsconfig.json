{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "src/plugins/**/ui/*",
    "admin-ui",
    "src/plugins/**/dashboard/*",
    "src/gql/*",
    "prisma.config.ts",
    "vite.config.mts"
  ],
  "ts-node": {
    "files": true
  },
  "references": [
    {
      "path": "./tsconfig.dashboard.json"
    }
  ]
}