generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
}

// OIDC-inspired User Model
// OIDC-inspired User Model
model Tenant {
  id                 String        @id @default(cuid())
  name               String
  slug               String        @unique
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  brevoApiKey        String?
  brevoSenderEmail   String?
  brevoSenderName    String?
  labsmobileApiKey   String?
  labsmobileUser     String?
  labsmobileUrl      String?
  labsmobileSenderId String?
  users              User[]
  applications       Application[]

  @@map("tenants")
}

model Application {
  id                     String   @id @default(cuid())
  name                   String
  clientId               String   @unique @default(uuid())
  clientSecret           String?
  tenantId               String
  tenant                 Tenant   @relation(fields: [tenantId], references: [id])
  redirectUris           String[]
  postLogoutRedirectUris String[]
  corsOrigins            String[]
  authMethods            Json?    @default("{\"password\": true, \"otp\": false, \"wallet\": false}")
  brevoApiKey            String?
  brevoSenderEmail       String?
  brevoSenderName        String?
  labsmobileApiKey       String?
  labsmobileUser         String?
  labsmobileUrl          String?
  labsmobileSenderId     String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("applications")
}

model User {
  id            String         @id @default(cuid())
  firstName     String?
  lastName      String?
  primaryEmail  String?        @unique
  emailVerified Boolean        @default(false)
  phoneNumber   String?        @unique
  phoneVerified Boolean        @default(false)
  passwordHash  String?
  avatar        String?
  customData    Json?
  tenantId      String?
  tenant        Tenant?        @relation(fields: [tenantId], references: [id])
  identities    UserIdentity[]
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@map("users")
}

model UserIdentity {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  provider      String // e.g., "google", "github"
  providerId    String // The ID from the provider
  profileResult Json? // Raw profile data
  createdAt     DateTime @default(now())

  @@unique([provider, providerId])
  @@map("user_identities")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  tokenHash String   @unique
  resource  String?
  scopes    String[]
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

// For OIDC Interaction (Login Flow State)
model Interaction {
  id        String   @id @default(cuid())
  details   Json
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("interactions")
}
