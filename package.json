{
    "name": "vendure-boilerplate-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:storefront\" --kill-others --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,magenta\"",
        "dev:backend": "cd vendure-backend && npm run dev:server",
        "dev:storefront": "cd vendure-storefront-next && npm run dev",
        "build": "cd vendure-backend && npm run build",
        "start": "npm run start:backend",
        "start:backend": "cd vendure-backend && npm start"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "concurrently": "9.2.1"
    }
}